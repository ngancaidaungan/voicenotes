<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent" android:background="@drawable/gradient"
  android:layout_height="fill_parent">
  <LinearLayout  
         android:layout_width="fill_parent"  
         android:orientation="vertical" android:padding="15px"  
         android:layout_height="fill_parent"> 
					
		<ImageView android:scaleType="center" android:layout_marginTop="20px"
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:src="@drawable/logo"/>
			  
		
		<LinearLayout android:layout_marginTop="30px"
         android:layout_width="fill_parent"  
         android:orientation="vertical"
         android:layout_height="fill_parent"> 
		
			<EditText android:id="@+id/salesforce_user_id" android:textStyle="bold"
				android:layout_width="fill_parent" android:hint="Username"
				android:layout_height="wrap_content" android:textSize="16px"
				android:textColor="#FF000000"/>
	
			<EditText android:id="@+id/salesforce_user_password" android:textStyle="bold"
				android:layout_width="fill_parent" android:hint="Password" android:password="true"
				android:layout_height="wrap_content" android:textSize="16px"
				android:textColor="#FF000000" />
							
			<Button android:id="@+id/btnLogin"
				android:text="Login"
				android:textSize="16px" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" />

		</LinearLayout>
	</LinearLayout>
  
</ScrollView>
